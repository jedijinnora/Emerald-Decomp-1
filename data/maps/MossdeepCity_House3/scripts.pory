mapscripts MossdeepCity_House3_MapScripts {}

script MossdeepCity_House3_EventScript_SuperRodFisherman {
	lock
	faceplayer
	checkitem(ITEM_SUPER_ROD)
	if(var(VAR_RESULT)) {
		msgbox(format("Have you enjoyed catching seafloor fish with my Super Rod?"))
		release
		end
	}

