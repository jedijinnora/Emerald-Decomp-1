		msgbox("Hunh?\n Don't you want my enormous rod?")
		release
		end
	}
	msgbox("Of course you want my rod!\nAfter all, a Super Rod is really super!")
	goto_if_not_defeated(TRAINER_ANDREW, NeedMoreFishermen)
	goto_if_not_defeated(TRAINER_IVAN, NeedMoreFishermen)
