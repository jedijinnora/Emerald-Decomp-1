const LOCALID_NURSE = 1

mapscripts PetalburgCity_PokemonCenter_1F_MapScripts {
	MAP_SCRIPT_ON_TRANSITION : PetalburgCity_PokemonCenter_1F_OnTransition
	MAP_SCRIPT_ON_RESUME : CableClub_OnResume
}

script PetalburgCity_PokemonCenter_1F_OnTransition {
	setrespawn(HEAL_LOCATION_PETALBURG_CITY)
	end
}

script PetalburgCity_PokemonCenter_1F_EventScript_Nurse {
	setvar(VAR_0x800B, LOCALID_NURSE)
	call(Common_EventScript_PkmnCenterNurse)
	waitmessage
	waitbuttonpress
	release
	end
}

