	msgbox(format("I defeated every Trainer in the Gym, but when I went back to challenge the Leader the attendant said I had to fight everyone again!"), MSGBOX_NPC)
	end
}

script PetalburgCity_PokemonCenter_1F_EventScript_Youngster {
