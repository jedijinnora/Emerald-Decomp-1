mapscripts MeteorFalls_B1F_1R_MapScripts {
	MAP_SCRIPT_ON_TRANSITION : Common_EventScript_DisableBPReward
}

script MeteorFalls_B1F_1R_EventScript_Ginny {
	trainerbattle_single(TRAINER_GINNY, MeteorFalls_B1F_1R_Text_GinnyIntro, MeteorFalls_B1F_1R_Text_GinnyDefeat)
	msgbox(MeteorFalls_B1F_1R_Text_GinnyPostBattle, MSGBOX_AUTOCLOSE)
	call(MeteorFalls_B1F_1R_EventScript_TryGinnyRematch)
	release
	end
}
script MeteorFalls_B1F_1R_EventScript_TryGinnyRematch {
	lock
    call(Common_EventScript_ShouldDoRematch)
	goto_if_eq(VAR_RESULT, FALSE, Common_EventScript_NopReturn)
	setvar(VAR_0x8003, TRAINER_GINNY)
	setvar(VAR_0x8004, 1)
	call(Common_EventScript_CheckRecentRematchesSetBP)
	trainerbattle_no_intro(TRAINER_GINNY, MeteorFalls_B1F_1R_Text_GinnyDefeat)
	special(UpdateRecentTrainers)
	return
}

