mapscripts MossdeepCity_Mart_MapScripts {}

script MossdeepCity_Mart_EventScript_Clerk {
    lock
	faceplayer
    msgbox(gText_HowMayIServeYou)
	waitmessage
	pokemart(0)
	msgbox(gText_PleaseComeAgain)
	release
	end
}

script MossdeepCity_Mart_EventScript_BallSeller {
    lock
	faceplayer
    msgbox(gText_HowMayIServeYou)
	waitmessage
	pokemart(MossdeepBallsMart)
	msgbox(gText_PleaseComeAgain)
	release
	end
}

mart MossdeepBallsMart {
	ITEM_NET_BALL
	ITEM_DUSK_BALL
	ITEM_DIVE_BALL
}