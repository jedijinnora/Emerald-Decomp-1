mapscripts VerdanturfTown_Mart_MapScripts {}

script VerdanturfTown_Mart_EventScript_Clerk {
    lock
	faceplayer
    msgbox(gText_HowMayIServeYou)
	waitmessage
	pokemart(0)
	msgbox(gText_PleaseComeAgain)
	release
	end
}

script VerdanturfTown_Mart_EventScript_BallSeller {
    lock
	faceplayer
    msgbox(gText_HowMayIServeYou)
	waitmessage
	pokemart(MossdeepBallsMart)
	msgbox(gText_PleaseComeAgain)
	release
	end
}

mart VerdanturfBallsMart {
	ITEM_NEST_BALL
	ITEM_DUSK_BALL
	ITEM_HEAL_BALL
}
