script EverGrandeCity_Headquarters_3F_EventScript_GameBoyKid {
    lock
    faceplayer
    goto_if_set(FLAG_ITEM_EVER_GRANDE_CITY_HEADQUARTERS_3F_LINKING_CORD, LanetteHint)
    msgbox(format("I work here as a security consultant. Can you keep a secret?"), MSGBOX_YESNO)
    if(var(VAR_RESULT) == NO) {
        msgbox(format("Lame."))
        release
        end
    }
    msgbox(format("I used to be a bit of a blackhat. My old gang of friends is still up to their tricks. They're the ones who cracked Silph's encryption scheme and made all TMs reusable!"))
    msgbox(format("I could give you a hint where to find them, if you're interested?"), MSGBOX_YESNO)
    if(var(VAR_RESULT) == NO) {
        msgbox(format("Really? Single use TMs and mandatory trade evolutions are ancient history. Ah, I guess you're a genwunner."))
        release
        end
    }
    goto_if_unset(FLAG_ITEM_EVER_GRANDE_CITY_HEADQUARTERS_3F_LINKING_CORD, TestFirst)
    LanetteHint:
    msgbox(format("Hey, you found the Linking Cord! Another useful item brought to you by helpful hackers!"))
    msgbox(format("Bill in Kanto is a yes-man for Team Rocket and the Indigo government. But here in Hoenn Lanette is in charge of the PC system. She lives on Route 114 and isn't afraid to stand up to the man."))
    release
    end
    TestFirst:
    msgbox(format("You gotta prove yourself a bit first. Find the hidden item in this room and come back. It'll be useful, I promise!"))
    release
    end
}

