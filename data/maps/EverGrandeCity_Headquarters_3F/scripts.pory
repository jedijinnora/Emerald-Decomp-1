script EverGrandeCity_Headquarters_3F_EventScript_Centauri {
    lock
    msgbox(format("Someone has taped a message to this computer. It looks like a quote. Continue reading?"), MSGBOX_YESNO)
    if(var(VAR_RESULT) == YES) {
        msgbox(format("“I sit in my cubicle, here on the motherworld. When I die, they will put my body in a box and dispose of it in the cold ground.”"))
        msgbox(format("“And in all the million ages to come, I will never breathe or laugh or twitch again.”"))
        msgbox(format("“So won't you run and play with me here among the teeming mass of humanity? The universe has spared us this moment.”"))
        msgbox(format("This quote is from the 1999 game Alpha Centauri, written by Brian Reynolds."))
        msgbox(format("On top is a sticky note that reads, “I quit.”"))
    }
    release
    end
}