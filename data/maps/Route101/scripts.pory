mapscripts Route101_MapScripts {
	MAP_SCRIPT_ON_TRANSITION : Route101_OnTransition
}

script Route101_OnTransition {
	call(Common_EventScript_DisableBPReward)
	end
}

script Route101_EventScript_RouteSign {
	msgbox("Route 101\p{UP_ARROW} Oldale Town\n{DOWN_ARROW} Littleroot Town", MSGBOX_SIGN)
	end
}

script Route101_EventScript_Breyden {
	trainerbattle_single(TRAINER_BREYDEN, Route101_Text_BreydenIntro, Route101_Text_BreydenDefeated)
	msgbox(Route101_Text_BreydenPostBattle, MSGBOX_AUTOCLOSE)
	call(Route101_EventScript_TryBreydenRematch)
	release
	end
}
script Route101_EventScript_TryBreydenRematch {
	lock
    call(Common_EventScript_ShouldDoRematch)
	goto_if_eq(VAR_RESULT, FALSE, Common_EventScript_NopReturn)
	setvar(VAR_0x8003, TRAINER_BREYDEN)
	setvar(VAR_0x8004, 1)
	call(Common_EventScript_CheckRecentRematchesSetBP)
	trainerbattle_no_intro(TRAINER_BREYDEN, Route101_Text_BreydenRematchDefeated)
	special(UpdateRecentTrainers)
	return
}
text Route101_Text_BreydenIntro {
	"I'm gonna wipe you out and head back\n"
	"home in time for dinner!"
}
text Route101_Text_BreydenDefeated {
	"Hard to win when you have to go home\n"
	"for dinner instead of training all day."
}
text Route101_Text_BreydenPostBattle {
	"I wish I had the HM for Cut. Then I\n"
	"could walk straight from Oldale to\l"
	"Littleroot."
}
text Route101_Text_BreydenRematchDefeated {
	"Again?! How much do you train?"
}

