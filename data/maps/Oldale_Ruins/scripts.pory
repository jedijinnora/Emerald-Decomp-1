mapscripts Oldale_Ruins_MapScripts {
    MAP_SCRIPT_ON_LOAD : OldaleRuins_OnLoad
}

script OldaleRuins_OnLoad {
    call_if_unset(FLAG_OLDALE_RUINS_OPEN_DOOR_1, OldaleRuins_EventScript_CloseRoom1)
    call_if_unset(FLAG_OLDALE_RUINS_OPEN_DOOR_2, OldaleRuins_EventScript_CloseRoom2)
    call_if_unset(FLAG_OLDALE_RUINS_OPEN_DOOR_3, OldaleRuins_EventScript_CloseRoom3)
    call_if_unset(FLAG_OLDALE_RUINS_OPEN_DOOR_4, OldaleRuins_EventScript_CloseRoom4)
    call_if_unset(FLAG_OLDALE_RUINS_OPEN_DOOR_5, OldaleRuins_EventScript_CloseRoom5)
    end
}

script OldaleRuins_EventScript_CloseRoom1 {
    setmetatile(24, 33, METATILE_General_RockWall_RockBase, TRUE)
	setmetatile(24, 34, METATILE_General_RockWall_SandBase, TRUE)
    return
}

