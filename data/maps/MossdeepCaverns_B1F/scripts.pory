mapscripts MossdeepCaverns_B1F_MapScripts {
	MAP_SCRIPT_ON_TRANSITION : Common_EventScript_DisableBPReward
}

script MossdeepCaverns_B1F_EventScript_Cooper {
	trainerbattle_single(TRAINER_COOPER, MossdeepCaverns_B1F_Text_CooperIntro, MossdeepCaverns_B1F_Text_CooperDefeat)
	msgbox(MossdeepCaverns_B1F_Text_CooperPostBattle, MSGBOX_AUTOCLOSE)
	call(MossdeepCaverns_B1F_EventScript_TryCooperRematch)
	release
	end
}
script MossdeepCaverns_B1F_EventScript_TryCooperRematch {
	lock
    call(Common_EventScript_ShouldDoRematch)
	goto_if_eq(VAR_RESULT, FALSE, Common_EventScript_NopReturn)
	setvar(VAR_0x8003, TRAINER_COOPER)
	setvar(VAR_0x8004, 1)
	call(Common_EventScript_CheckRecentRematchesSetBP)
	trainerbattle_no_intro(TRAINER_COOPER, MossdeepCaverns_B1F_Text_CooperDefeat)
	special(UpdateRecentTrainers)
	return
}
text MossdeepCaverns_B1F_Text_CooperIntro {
	"In this dark cave, we train our\n"
    "fearsome potential!"
}
text MossdeepCaverns_B1F_Text_CooperDefeat {
	"How did this happen?"
}
text MossdeepCaverns_B1F_Text_CooperPostBattle {
	"Free yourself from the distractions of\n"
	"the material plane! Grow your power."
}

