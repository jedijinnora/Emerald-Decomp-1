script Route112_EventScript_Bryant {
	trainerbattle_single(TRAINER_BRYANT, Route112_Text_BryantIntro, Route112_Text_BryantDefeat)
	msgbox(Route112_Text_BryantPostBattle, MSGBOX_AUTOCLOSE)
	call(Route112_EventScript_TryBryantRematch)
	release
	end
}
script Route112_EventScript_TryBryantRematch {
	lock
    call(Common_EventScript_ShouldDoRematch)
	goto_if_eq(VAR_RESULT, FALSE, Common_EventScript_NopReturn)
	setvar(VAR_0x8003, TRAINER_BRYANT)
	setvar(VAR_0x8004, 1)
	if (defeated(TRAINER_SHAYLA)) {
		msgbox(format("Include Shayla and make it a double battle?"), MSGBOX_YESNO)
		if (var(VAR_RESULT) == YES) {
			trainerbattle(TRAINER_BATTLE_SET_TRAINER_B, TRAINER_SHAYLA, 0, NULL, Route112_Text_ShaylaDefeat)
			addvar(VAR_0x8004, 1)
		}
	}
	call(Common_EventScript_CheckRecentRematchesSetBP)
    trainerbattle_no_intro(TRAINER_BRYANT, Route112_Text_BryantDefeat)
	special(UpdateRecentTrainers)
	return
}

