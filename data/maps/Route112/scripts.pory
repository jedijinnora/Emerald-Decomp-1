mapscripts Route112_MapScripts {
	MAP_SCRIPT_ON_TRANSITION : Route112_OnTransition
}

script Route112_OnTransition {
	clearflag(FLAG_FORCE_MIRAGE_TOWER_VISIBLE)
	setvar(VAR_JAGGED_PASS_ASH_WEATHER, 0)
	call(Common_EventScript_DisableBPReward)
	end
}

script Route112_EventScript_Hiker {
	msgbox(format("Bah, it really grinds my gears! Instead of working on sensible projects like smoothing out these ledges, all the construction crews are working on that boondoggle Rusturf Tunnel!"), MSGBOX_NPC)
	end
}

script Route112_EventScript_Brice {
	trainerbattle_single(TRAINER_BRICE, Route112_Text_BriceIntro, Route112_Text_BriceDefeat)
	msgbox(Route112_Text_BricePostBattle, MSGBOX_AUTOCLOSE)
	call(Route112_EventScript_TryBriceRematch)
	release
	end
}
script Route112_EventScript_TryBriceRematch {
	lock
    call(Common_EventScript_ShouldDoRematch)
	goto_if_eq(VAR_RESULT, FALSE, Common_EventScript_NopReturn)
	setvar(VAR_0x8003, TRAINER_BRICE)
	setvar(VAR_0x8004, 1)
	call(Common_EventScript_CheckRecentRematchesSetBP)
	trainerbattle_no_intro(TRAINER_BRICE, Route112_Text_BriceDefeat)
	special(UpdateRecentTrainers)
	return
}

