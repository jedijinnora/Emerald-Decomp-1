script MeteorVillage_CentralHall_EventScript_ExpertM {
    lock
    faceplayer
    msgbox(format("Some visitors say we are fools, to live traditionally and disdain the conveniences of modern Hoenn."))
    msgbox(format("If I owned a personal computer would the smiles of my grandchildren glow more brighly?"))
    msgbox(format("If we grew our crops with industrial fertilizers and pesticides would the food I cook with my family taste any different?"))
    msgbox(format("Don't let yourself be overawed by the material promises of modernity and forget the important things in life."))
    release
    end
}

script MeteorVillage_CentralHall_EventScript_Nurse {
    lock
    faceplayer
    msgbox(format("Shall I heal your Pok√©mon?"), MSGBOX_YESNO)
    if(var(VAR_RESULT) == NO) {
        msgbox(format("Come again."))
        release
        end
    }
    call(Common_EventScript_OutOfCenterPartyHeal)
    msgbox(format("May the stars light your way."))
    release
    end
}