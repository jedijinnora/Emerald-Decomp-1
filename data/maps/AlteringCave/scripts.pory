mapscripts AlteringCave_MapScripts {
	MAP_SCRIPT_ON_TRANSITION : AlteringCave_OnTransition
}

script AlteringCave_OnTransition {
	setflag(FLAG_LANDMARK_ALTERING_CAVE)
	end
}

script AlteringCave_EventScript_Sign {
	msgbox(format("9 sets of wild PokÃ©mon can be found on this floor of Altering Cave!"), MSGBOX_SIGN)
	end
}

script AlteringCave_EventScript_WildHack {
	lock
	addvar(VAR_WILD_SET_ALTERING_CAVE, 1)
	if (var(VAR_WILD_SET_ALTERING_CAVE) > 7) {
		setvar(VAR_WILD_SET_ALTERING_CAVE, 0)
	}
	msgbox(format("Pressed the super-secret switch!"))
	release
	end
}

script AlteringCave_EventScript_Statue_0 {
	lock
	msgbox(format("A secret switch! \nPress it?"), MSGBOX_YESNO)
	if(var(VAR_RESULT) == YES) {
		msgbox(format("Who wouldn't?"))
		release
		call(AlteringCave_EventScript_SetWild_0)
	}
	release
	end
}

