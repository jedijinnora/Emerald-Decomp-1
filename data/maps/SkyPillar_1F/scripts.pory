mapscripts SkyPillar_1F_MapScripts {}

//was used to switch layout for easier climb during vanilla story
script SkyPillar_1F_EventScript_CleanFloor {
	setmaplayoutindex(LAYOUT_SKY_PILLAR_1F_CLEAN)
	return
}

script SkyPillar_1F_EventScript_Ashe {
	trainerbattle_single(TRAINER_ASHE, SkyPillar_1F_Text_AsheIntro, SkyPillar_1F_Text_AsheDefeat)
	msgbox(SkyPillar_1F_Text_AshePostBattle, MSGBOX_AUTOCLOSE)
	call(SkyPillar_1F_EventScript_TryAsheRematch)
	release
	end
}
script SkyPillar_1F_EventScript_TryAsheRematch {
	lock
    call(Common_EventScript_ShouldDoRematch)
	goto_if_eq(VAR_RESULT, FALSE, Common_EventScript_NopReturn)
	setvar(VAR_0x8003, TRAINER_ASHE)
	setvar(VAR_0x8004, 1)
	call(Common_EventScript_CheckRecentRematchesSetBP)
	trainerbattle_no_intro(TRAINER_ASHE, SkyPillar_1F_Text_AsheDefeat)
	special(UpdateRecentTrainers)
	return
}
