    if (!flag(FLAG_MET_THOMPSON_ALWAYS_HIT_MOVES)) {
        msgbox(format("Now that you've found me, the apporopriate type experts will also teach these moves."))
        setflag(FLAG_MET_THOMPSON_ALWAYS_HIT_MOVES)
