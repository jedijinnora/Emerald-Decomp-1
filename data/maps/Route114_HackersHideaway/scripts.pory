script Route114_HackersHideaway_EventScript_Youngster {
    lock
    faceplayer
    if(!flag(FLAG_RECEIVED_AMULET_COIN)) {
        msgbox(format("Break the bank with this one cool trick!"))
        giveitem(ITEM_AMULET_COIN)
        setflag(FLAG_RECEIVED_AMULET_COIN)
    }
    msgbox(format("Stick it to the man by doubling the money you take from people weaker than you!"))
    msgbox(format("…"))
    msgbox(format("Actually, using an Amulet Coin feels kinda scummy. But your tears can be dried using that sweet, sweet cash."))
    release
    end
}

