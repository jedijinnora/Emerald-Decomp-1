mapscripts Route102_MapScripts {
	MAP_SCRIPT_ON_TRANSITION : Route102_OnTransition
}

script Route102_OnTransition {
	call(Common_EventScript_SetupRivalGfxId)
	call(Common_EventScript_DisableBPReward)
	end
}

