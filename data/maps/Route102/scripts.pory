script Route102_EventScript_Calvin {
	trainerbattle_single(TRAINER_CALVIN, Route102_Text_CalvinIntro, Route102_Text_CalvinDefeated)
	msgbox(Route102_Text_CalvinPostBattle, MSGBOX_DEFAULT)
	call(Route101_EventScript_TryCalvinRematch)
	release
	end
}
script Route101_EventScript_TryCalvinRematch {
	lock
    call(Common_EventScript_ShouldDoRematch)
	goto_if_eq(VAR_RESULT, FALSE, Common_EventScript_NopReturn)
	setvar(VAR_0x8003, TRAINER_CALVIN)
	setvar(VAR_0x8004, 1)
	call(Common_EventScript_CheckRecentRematchesSetBP)
	trainerbattle_no_intro(TRAINER_CALVIN, Route102_Text_CalvinRematchDefeated)
	special(UpdateRecentTrainers)
	return
}

