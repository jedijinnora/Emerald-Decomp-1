script LittlerootShore_EventScript_Samuel {
	trainerbattle_single(TRAINER_SAMUEL, LittlerootShore_Text_SamuelIntro, LittlerootShore_Text_SamuelDefeat)
	msgbox(LittlerootShore_Text_SamuelPostBattle, MSGBOX_AUTOCLOSE)
	call(LittlerootShore_EventScript_TrySamuelRematch)
	release
	end
}
script LittlerootShore_EventScript_TrySamuelRematch {
	lock
    call(Common_EventScript_ShouldDoRematch)
	goto_if_eq(VAR_RESULT, FALSE, Common_EventScript_NopReturn)
	setvar(VAR_0x8003, TRAINER_SAMUEL)
	setvar(VAR_0x8004, 3)
	call(Common_EventScript_CheckRecentRematchesSetBP)
	trainerbattle_no_intro(TRAINER_SAMUEL, LittlerootShore_Text_SamuelDefeat)
	special(UpdateRecentTrainers)
	return
}
text LittlerootShore_Text_SamuelIntro {
	"Want my Choice Specs?\n"
	"You can't have them!"
}
text LittlerootShore_Text_SamuelDefeat {
	"Fine, take the stupid thing!"
}
text LittlerootShore_Text_SamuelPostBattle {
	"Go away, I don't like people who are\n"
	"stronger than me."
}

